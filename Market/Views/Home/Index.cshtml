    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        $("a[link-number]").click(function () {
            $.ajax({
                url: "/Cart/AddToCart",
                datatype: "html",
                data: {
                    "ID": $(this).attr("link-number").toString()
                },
                success: function (result) {
                    alert($(this).attr("link-number").toString());
                },
                error: function () {
                    alert("Enter Price");
                }
            })


        });
    </script>
