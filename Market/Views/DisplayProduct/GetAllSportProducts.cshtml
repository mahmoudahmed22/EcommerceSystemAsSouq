@model List<Market.Models.Model.Product>



@{
    ViewBag.Title = "Sports Products";
}

<style>
    .card-product .img-wrap {
        border-radius: 3px 3px 0 0;
        overflow: hidden;
        position: relative;
        height: 220px;
        text-align: center;
    }

        .card-product .img-wrap img {
            max-height: 100%;
            max-width: 100%;
            object-fit: cover;
        }

    .card-product .info-wrap {
        overflow: hidden;
        padding: 15px;
        border-top: 1px solid #eee;
    }

    .card-product .bottom-wrap {
        padding: 15px;
        border-top: 1px solid #eee;
    }

    .label-rating {
        margin-right: 10px;
        color: #333;
        display: inline-block;
        vertical-align: middle;
    }

    .card-product .price-old {
        color: #999;
    }
</style>


<div class="container pt-4">
    <div id="slider" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#slider" data-slide-to="0" class="active"></li>
            <li data-target="#slider" data-slide-to="1"></li>
            <li data-target="#slider" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/images/mobileslide1.jpg" class="img-responsive img-thumbnail">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/mobileslide2.jpg" class="img-responsive img-thumbnail">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/mobileslide3.jpg" class="img-responsive img-thumbnail">
            </div>
        </div>
        <a class="carousel-control-prev" href="#slider" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#slider" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>

    <div class="container pt-5" style="margin-top:10px">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <figure class="card card-product">
                        @{ bool f = true;
                            foreach (var i in item.Images)
                            {
                                if (f)
                                {
                                    <div class="img-wrap"><a href="/DisplayProduct/ProductDetails/@item.ID "><img @*style="width:290px; height:180px"*@ src="@i.Url"></a></div>
                                    f = false;
                                }
                            }
                        }
                        @*<div class="img-wrap"><img src="@item.Images"></div>*@


                        <figcaption class="info-wrap" style="height:116px">
                            <h4 class="title">@item.Name</h4>
                            <span class="desc">@item.Name</span>
                            <div class="rating-wrap">
                                <a href="/DisplayProduct/ProductDetails/@item.ID">Details</a>
                            </div>
                        </figcaption>
                        <div class="bottom-wrap">
                            <a href="/Cart/AddToCart/@item.ID" class="btn btn-sm btn-primary float-right">add To Card</a>
                            <div class="price-wrap h5">
                                <span class="price-new">@item.Price</span>
                            </div>
                        </div>
                    </figure>
                </div>

            }



        </div> <!-- row.// -->



    </div>

</div>
<div id="Notifi"></div>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/js"></script>
    <script>
        var proxy = $.connection.ProductHob;
        proxy.client.NewProductAddToSport = function (c) {
            $("#Notifi").html("A new product has been added  Name Is " + c);
        }
        $.connection.hub.start().done(function () {


        });
    </script>

}